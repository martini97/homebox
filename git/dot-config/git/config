[user]
  name = Alessandro Martini
  email = martini97@protonmail.ch
  username = martini

[alias]
  st = status
  ll = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  cm = commit --gpg-sign --signoff
  cb = "!git branch --all --sort=committerdate | grep -v '^[*+]' | awk '{print $1}' | fzf --exit-0 --preview 'git show --color=always {-1}' | sed 's/remotes\\/origin\\///g' | xargs -r git checkout"

[core]
  editor = nvim
  excludesfile = ~/.config/git/ignore

[init]
  defaultBranch = "main"

[pull]
  ; rebase = true

[push]
  default = current

[rebase]
  instructionFormat = (%an <%ae>) %s

[merge]
  tool = "nvim"

[mergetool]
  prompt = false

[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[commit]
  verbose = true
  gpgsign = true

[format]
  signOff = true

[includeIf "hasconfig:remote.*.url:https://github.com:**/**"]
  path = config.github

[includeIf "hasconfig:remote.*.url:git@github.com:**/**"]
  path = config.github

[credential "https://github.com"]
  helper =
  helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
  helper = =
  helper = !/usr/bin/gh auth git-credential
